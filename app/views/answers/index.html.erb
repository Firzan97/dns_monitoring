<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Dnsname</th>
      <th>Ttl</th>
      <th>Recordtype</th>
      <th>Ipaddress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.dnsname %></td>
        <td><%= answer.ttl %></td>
        <td><%= answer.recordtype %></td>
        <td><%= answer.ipaddress %></td>
        <td><%= link_to 'Show', question_answer_path(@question,answer) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(@question,answer) %></td>
        <td><%= link_to 'Destroy', question_answer_path(@question,answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path %>
