<div class="form">
<h1>Edit DNS</h1>

<hr>
<%= bootstrap_form_for @question do |form| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" >
    <%= form.text_field :dnsname, id: :question_dnsname %>
  </div>

  <div class="field">
    <%= form.select :recordtype,['A', 'AAAA','MX','NS','CNAME','SOA','PTR','SRV'] %>
  </div>

  <div class="field">
    <%= form.text_field :server, id: :question_server %>
  </div>

   <div class="field">
    
    <%= form.select :timeperiod, Question::TIMEPERIOD %>

  </div>

<button type="submit" class="btn btn-secondary" ><span class="fa fa-check"></span>Submit</button>

<% end %>

<hr>

<%= link_to questions_path ,class: "btn btn-primary" do%>
 <span class="fa fa-backward" aria-hidden="true"></span> Back
 <%end%>
 <br>
 &nbsp;

</div>
